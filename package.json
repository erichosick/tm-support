{
  "name": "tm-support",
  "version": "0.0.1",
  "description": "Contains tracking madness support projects.",
  "keywords": [
    "Tracking Madness, URL Parameters, Headers, Local Storage, Typescript"
  ],
  "author": {
    "name": "Eric Hosick",
    "email": "erichosick@gmail.com",
