  "bugs": {
    "url": "https://github.com/erichosick/tm-support/issues",
    "email": "erichosick@gmail.com"
  },
  "scripts": {
    "build": "yarn lerna run build",
    "build:watch": "yarn lerna run build:watch",
    "develop": "yarn lerna run develop",
    "test:unit": "jest --config=./jest.unit.config.ts",
    "test:unit:watch": "jest --config=./jest.unit.config.ts --watch --coverage --verbose",
    "test:unit:watch:no-coverage": "jest --config=./jest.unit.config.ts --watch --verbose",
    "test:integration": "jest --config=./jest.integration.config.ts",
    "test:integration:watch": "jest --config=./jest.integration.config.ts --watch --coverage --verbose",
    "test:integration:watch:no-coverage": "jest --config=./jest.integration.config.ts --watch --verbose",
    "publish:all": "yarn test:integration && yarn build && yarn lerna publish",
    "lerna:create": "yarn lerna create -y"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "jest": "^29.1.2",
    "lerna": "^5.6.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}